<%- include('../componentes/menu/menu',{nombre:'Fabio'})%>

<style>
    table,tr,td,th{
        border: solid 1px rgb(165, 165, 165)
    }
</style>
<a href="/api/traguito/crear">
    <button>Crear</button>
</a>

<table>
        <tr>
            <th>Nombre</th>
            <th>Grados</th>
            <th>Caduca</th>
            <th>Precio</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
        <% arregloTragos.forEach((trago)=>{ %>
            <tr>
                <td> <%=trago.nombre%> </td>
                <td> <%=trago.gradosAlcohol%> </td>
                <td> <%=trago.fechaCaducidad%> </td>
                <td> <%=trago.precio%> </td>
                <td> <%=trago.tipo%> </td>
                <td> 
                    <a href="/api/traguito/crear"><button>Actualizar</button></a>
                    <form action="/api/traguito/eliminar" method="post">
                        <input id="id" type="number" name="id" value="<%trago.id%>" hidden>
                        <button>Eliminar</button>
                    </form>  
                </td>
            </tr>
        <% })%>
    </table>